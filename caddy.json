{
  "apps": {
    "tls": {
      "automation": {
        "policies": [
          {
            "issuers": [
              {
                "module": "acme",
                "ca": "https://acme-v02.api.letsencrypt.org/directory"
              },
              {
                "module": "acme",
                "ca": "https://acme-staging-v02.api.letsencrypt.org/directory"
              }
            ]
          }
        ]
      }
    },
    "http": {
      "servers": {
        "main": {
          "listen": [":80", ":443"],
          "routes": [
            {
              "match": [{ "host": ["letsgoo.tech"] }],
              "handle": [
                {
                  "handler": "file_server",
                  "root": "/app/mount/website"
                }
              ]
            }
          ]
        }
      }
    }
  }
}
